@model IEnumerable<AuthorViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center">
    <h2>Authors</h2>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</div>


<form asp-action="Index" class="row g-2">
    <div class="col-md-3">
        <input class="form-control" placeholder="Author Name" type="text" name="searchTerm" value="@ViewData["currentFilter"]" />
    </div>
    <div class="col-md-9">
        <input type="submit" value="Search" class="btn btn-primary" /> |
        <a asp-action="Index">Back to Full List</a>
    </div>
</form>

<div class="clearfix"></div>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AuthorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AuthorId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AuthorId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AuthorId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.AuthorId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>